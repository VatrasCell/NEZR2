<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="de.vatrascell.nezr.react.ReactController">
    <top>
        <Label text="Sichtbarkeitsbedingungen Ã¤ndern" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="8.0"/>
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <TableView fx:id="tbl_react" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <placeholder>
        	<Label text="Keine Bedinungen gesetzt." />
    	</placeholder>
        <columns>
          <TableColumn fx:id="questionsColumn" prefWidth="63.0" text="Frage" />
          <TableColumn fx:id="answersColumn" prefWidth="509.0" text="Antwort" />
          <TableColumn fx:id="commentsColumn" prefWidth="204.0" text="Frage ist sichtbar, wenn..." />
        </columns>
         <BorderPane.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </BorderPane.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox prefHeight="51.0" prefWidth="600.0" spacing="8.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btn_new" mnemonicParsing="false" onAction="#createNew" text="Neu">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#save" text="Speichern" />
            <Button mnemonicParsing="false" onAction="#exit" text="Abbruch" />
         </children>
         <BorderPane.margin>
            <Insets left="8.0" right="8.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="8.0" top="8.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
